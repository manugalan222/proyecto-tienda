<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="480.0" prefWidth="800.0" stylesheets="@estilos.css"
            xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.galan.proyectotienda2025.InventarioControlador">

    <!-- Barra lateral -->
    <left>
        <VBox id="barra-lateral" spacing="10.0" prefWidth="300.0" styleClass="sidebar" >
            <HBox alignment="CENTER" styleClass="sidebar-brand">
                <Text text="MB" styleClass="brand-short"/>
                <Text text="Distribuciones" styleClass="brand-long"/>
            </HBox>

            <Button text="🏠 Inicio" styleClass="menu-btn" maxWidth="Infinity" onAction="#onInicioButtonClick"/>
            <Button text="📦 Productos" styleClass="menu-btn" maxWidth="Infinity" onAction="#onProductosButtonClick"/>
            <Button text="💰 Ventas" styleClass="menu-btn" maxWidth="Infinity" onAction="#onVentaButtonClick"/>
            <Button text="👥 Clientes" styleClass="menu-btn" maxWidth="Infinity" onAction="#onClienteButtonClick"/>
            <Button text="📊 Inventario" styleClass="menu-btn" maxWidth="Infinity" onAction="#onInventarioButtonClick"/>
            <Button text="💳 Cuotas" styleClass="menu-btn" maxWidth="Infinity" onAction="#onCuotasButtonClick"/>
            <Button text="⚙️ Configuración" styleClass="menu-btn" maxWidth="Infinity"/>

        </VBox>
    </left>

    <!-- Contenido principal -->
    <center>
        <VBox spacing="15" styleClass="main-content" prefWidth="Infinity" prefHeight="Infinity">

            <!-- Título -->
            <Text text="Inventario" styleClass="titulo" />

            <!-- Barra de búsqueda y filtros -->
            <HBox spacing="10">
                <TextField fx:id="txtBuscar" promptText="Buscar por ID, nombre o marca" HBox.hgrow="ALWAYS"/>
                <ComboBox fx:id="comboCategoria" promptText="Categoría" prefWidth="150"/>
                <ComboBox fx:id="comboMarca" promptText="Marca" prefWidth="150"/>
                <CheckBox fx:id="chkStockBajo" text="Solo stock bajo" onAction="#onChkStockBajo"/>
                <Button text="Limpiar"/>
            </HBox>

            <!-- Tabla de productos -->
            <TableView fx:id="tablaProductos" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
                    <TableColumn fx:id="colDesc" text="Descripcion" prefWidth="150"/>
                    <TableColumn fx:id="colCompra" text="Precio compra" prefWidth="150"/>
                    <TableColumn fx:id="colVenta" text="Precio venta" prefWidth="150"/>
                    <TableColumn fx:id="colMarca" text="Marca" prefWidth="100"/>
                    <TableColumn fx:id="colTemporada" text="Temporada" prefWidth="100"/>
                    <TableColumn fx:id="colTipo" text="Tipo" prefWidth="100"/>
                    <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
                    <TableColumn fx:id="colPromo" text="Promo" prefWidth="80"/>
                </columns>
            </TableView>


        </VBox>
    </center>

</BorderPane>
