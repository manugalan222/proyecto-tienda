<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.CheckBox?>
<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@estilos.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.galan.proyectotienda2025.CuotasControlador">

    <!-- Barra lateral -->
    <left>
        <VBox id="barra-lateral" spacing="10.0" prefWidth="300.0" styleClass="sidebar">
            <children>
                <Button text="Inicio" styleClass="menu-btn" maxWidth="Infinity" onAction="#onInicioButtonClick"/>
                <Button text="Productos" styleClass="menu-btn" maxWidth="Infinity" onAction="#onProductosButtonClick"/>
                <Button text="Ventas" styleClass="menu-btn" maxWidth="Infinity" onAction="#onVentasButtonClick"/>
                <Button text="Clientes" styleClass="menu-btn" maxWidth="Infinity" onAction="#onClientesButtonClick"/>
                <Button text="Inventario" styleClass="menu-btn" maxWidth="Infinity" onAction="#onInventarioButtonClick"/>
                <Button text="Cuotas" styleClass="menu-btn" maxWidth="Infinity" />
                <Button text="Configuración" styleClass="menu-btn" maxWidth="Infinity"/>
            </children>
        </VBox>
    </left>

    <!-- Contenido principal -->
    <center>
        <VBox spacing="15.0" style="-fx-padding: 15;" alignment="TOP_CENTER">
            <children>

                <!-- Título -->
                <Text text="Cuotas Pendientes" styleClass="titulo" />

                <!-- Búsqueda -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Buscar:"/>
                    <TextField fx:id="txtBuscarCuota" promptText="ID de Venta o DNI de Cliente" prefWidth="250"/>
                    <Button text="Buscar" onAction="#onBuscarCuotaClick"/>
                    <Button text="Limpiar" onAction="#onLimpiarBusquedaClick"/>
                </HBox>

                <!-- Tabla de cuotas pendientes -->
                <TableView fx:id="tablaCuotasPendientes" onMouseClicked="#onTablaDoubleClick"
                           prefHeight="400" prefWidth="Infinity">

                    <columns>
                        <TableColumn fx:id="colVentaId" text="ID Venta" prefWidth="80"/>
                        <TableColumn fx:id="colClienteDni" text="DNI Cliente" prefWidth="120"/>
                        <TableColumn fx:id="colMontoTotal" text="Monto Total" prefWidth="120"/>
                        <TableColumn fx:id="colTipoCuota" text="Tipo de cuota" prefWidth="120"/>
                        <TableColumn fx:id="colSaldoRestante" text="Saldo Restante" prefWidth="120"/>
                        <TableColumn fx:id="colTotalCuotas" text="Cuotas Totales" prefWidth="100"/>
                        <TableColumn fx:id="colCuotasPagadas" text="Adeudadas" prefWidth="150"/>
                        <TableColumn fx:id="colCuotasPendientes" text="Pendientes" prefWidth="100"/>
                        <TableColumn fx:id="colFechaLimite" text="Fecha limite" prefWidth="120"/>
                    </columns>
                </TableView>

                <!-- Botones de acción -->
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Registrar Pago" fx:id="btnRegistrarPago" onAction="#onRegistrarPagoClick"/>
                    <TextField fx:id="txtCuotasAPagar" prefWidth="80" promptText="1"/>
                    <Button text="Recordar Pago" fx:id="btnRecordarPago"/>
                </HBox>

            </children>
        </VBox>
    </center>
</BorderPane>